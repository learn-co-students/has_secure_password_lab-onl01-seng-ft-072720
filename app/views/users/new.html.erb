<% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>

<h1>Signup</h1>
<%= form_for @user do |f| %>
    <p><%= f.label "Name: " %>
    <%= f.text_field :name %></p>

    <p><%= f.label "Password: " %>
    <%= f.password_field :password %></p>

    <p><%= f.label "Confirm Password" %>
    <%= f.password_field :password_confirmation %></p>

    <%= f.submit "Create new user" %>
<% end %>